{
  "dashboard": {
    "title": "XpressOps Frontend Monitoring",
    "tags": ["frontend", "xpressops", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Error Rate (errors/min)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(rate(frontend_errors_total[1m])) * 60",
            "legendFormat": "Error Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Errors/min",
            "format": "short"
          }
        ],
        "thresholds": [
          {
            "value": 10,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ],
        "alert": {
          "name": "High Frontend Error Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [10],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 2,
        "title": "Page Load Time (p50, p95, p99)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(frontend_page_load_duration_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(frontend_page_load_duration_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(frontend_page_load_duration_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "label": "Duration (ms)",
            "format": "ms"
          }
        ]
      },
      {
        "id": 3,
        "title": "API Call Success Rate",
        "type": "singlestat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "(sum(rate(frontend_api_calls_total{status=~\"2..\"}[5m])) / sum(rate(frontend_api_calls_total[5m]))) * 100",
            "refId": "A"
          }
        ],
        "valueName": "current",
        "format": "percent",
        "thresholds": "95,98",
        "colors": ["red", "orange", "green"],
        "valueFontSize": "80%"
      },
      {
        "id": 4,
        "title": "WebSocket Connection Status",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 8
        },
        "targets": [
          {
            "expr": "frontend_websocket_connected",
            "refId": "A"
          }
        ],
        "mappings": [
          {
            "type": "value",
            "options": {
              "0": {
                "text": "Disconnected",
                "color": "red"
              },
              "1": {
                "text": "Connected",
                "color": "green"
              }
            }
          }
        ]
      },
      {
        "id": 5,
        "title": "Browser Errors by Type",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum by(error_type) (frontend_errors_total)",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ],
        "pieType": "donut",
        "legend": {
          "show": true,
          "values": true,
          "percentage": true
        }
      },
      {
        "id": 6,
        "title": "Active User Sessions",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "frontend_active_sessions",
            "legendFormat": "Active Sessions",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Sessions",
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "title": "JavaScript Heap Size",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "frontend_js_heap_size_bytes / 1024 / 1024",
            "legendFormat": "Heap Size (MB)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "label": "Size (MB)",
            "format": "short"
          }
        ]
      },
      {
        "id": 8,
        "title": "API Response Time by Endpoint",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by(endpoint, le) (rate(frontend_api_duration_bucket[5m])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "endpoint": "Endpoint",
                "Value": "p95 Duration (ms)"
              }
            }
          }
        ]
      }
    ]
  },
  "overwrite": true,
  "inputs": [],
  "folderId": 0
}
